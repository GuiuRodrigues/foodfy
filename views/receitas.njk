{%extends "layout.njk"%}
{%block head%}
    <title>Foodfy - Receitas</title>
    {%endblock%}
    {%block content%}

        <section class="recipes">
            {% for item in items%}

                <div class="recipe" id="{{item.id}}">
                    <div class="recipe-imagem-container">
                        <img src="{{item.image}}" alt="Imagem de {{item.title}}"/>
                    </div>
                    <div class="recipe-name">
                        <p>{{item.title}}</p>
                    </div>
                    <div class="recipe-author">
                        <p>{{item.author}}</p>
                        <p class="card__link">
                            <a href="" target="_blank"></a>
                        </p>
                    </div>
                </div>
                {%endfor%}

            </section>

            <script src="/scripts.js"></script>
            {%endblock%}