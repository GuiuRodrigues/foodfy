{%extends "layout.njk"%}
{%block head%}
    <title>Foodfy - Home</title>
    {%endblock%}

    {%block content%}

        <section class="content">
            <h1>{{home.title}}</h1>

            <p>{{home.text}}</p>
            <img id="chef" src="/assets/chef.png">

        </section>

        <div id="id3">
            <h1>{{home.favorite}}</h1>
        </div>

        <section class="recipes">

            {% for item in items%}

                <div class="recipe" id="{{item.id}}">
                    <div class="recipe-imagem-container">
                        <img src="{{item.image}}" alt="Imagem de {{item.title}}"/>
                    </div>
                    <div class="recipe-name">
                        <p>{{item.title}}</p>
                    </div>
                    <div class="recipe-author">
                        <p>{{item.author}}</p>
                        <p class="card__link">
                            <a href="" target="_blank"></a>
                        </p>
                    </div>
                </div>
                {%endfor%}

            </section>

            {%endblock%}